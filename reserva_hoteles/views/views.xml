    <!-- Top menu item -->
    
    <menuitem name="reserva_hoteles" id="reserva_hoteles.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="reserva_hoteles.menu_1" parent="reserva_hoteles.menu_root"/>
    <menuitem name="Menu 2" id="reserva_hoteles.menu_2" parent="reserva_hoteles.menu_root"/>
    <menuitem name="Hotels Reseve" id="reserva_hoteles.menu_1_list" parent="reserva_hoteles.menu_root"/>
    <!-- actions -->
    
    
     <menuitem name="Ciudades" id="reserva_hoteles.menu_1_citys_list" parent="reserva_hoteles.menu_1_list"
              action="reserva_hoteles.action_citys_window"/>
     <menuitem name="Hoteles" id="reserva_hoteles.menu_2_hotels_list" parent="reserva_hoteles.menu_1_list"
              action="reserva_hoteles.action_hotels_window"/>
     <menuitem name="Habitaciones" id="reserva_hoteles.menu_3_rooms_list" parent="reserva_hoteles.menu_1_list"
              action="reserva_hoteles.action_rooms_window"/>
    <menuitem name="Reservas" id="reserva_hoteles.menu_4_reserves_list" parent="reserva_hoteles.menu_1_list"
              action="reserva_hoteles.action_reserve_window"/>
