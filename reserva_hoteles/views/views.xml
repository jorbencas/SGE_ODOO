												</t>
											</templates>
										</kanban>
									</field>
								</page>
								<page string="Habitaciones">
									<div class="oe_product_vignette" style="border:none;flex:0;width:auto">
										<a type="open">
											<field name="listRooms">
												<kanban>
													<!-- list of field to be loaded -->
													<field name="name" />
													<field name="beds" />
													<field name="price" />
													<field name="description" />
													<templates>
														<t t-name="kanban-box">
															<div class="oe_product_vignette">
																<a type="open">
																	<field name="photomainroom" style="border:1px solid gray;border-radius:1px;" widget="image" />
																</a>
																<div class="oe_product_desc">
																	<h4>
																		<a type="edit">
																			<field name="name">
																			</field>
																		</a>
																	</h4>
																	<ul>
																		<li>
																			cAMAS:
																			<field name="beds">
																			</field>
																		</li>
																		<li>
																			Ciudad:
																			<field name="city">
																			</field>
																		</li>
																		<li>
																			Descripcion:
																			<field name="description">
																			</field>
																		</li>
																	</ul>
																</div>
															</div>
														</t>
													</templates>
												</kanban>
											</field>
										</a>
									</div>
								</page>
								<page string="Comentarios">
									<field name="comments">
										<kanban>
											<templates>
												<t t-name="kanban-box">
													<div class="oe_product_vignette">
														<a type="open">
															<field name="photoclient" widget="image" class="oe_left oe_avatar" />
														</a>
														<group>
															<h4>
																Nombre cliente:
															</h4>
															<field name="nameclient" widget="char">
															</field>
															<h4>
																Descripcion:
															</h4>
															<field name="description" widget="char">
															</field>
															<h4>
																Valoracion:
															</h4>
															<field name="valorations" widget="selection">
															</field>
														</group>
													</div>
												</t>
											</templates>
										</kanban>
									</field>
								</page>
								<page string="Servicios">
									<field name="listServices">
										<kanban>
											<templates>
												<t t-name="kanban-box">
													<div class="oe_product_vignette" style="border:none;flex:0;width:auto">
														<a type="open">
															<field name="photo" widget="image" />
														</a>
													</div>
												</t>
											</templates>
										</kanban>
									</field>
								</page>
							</notebook>
						</group>
						<notebook>
							<page string="Reservas Pasadas">
								<field name="oldreserve">
								</field>
							</page>
							<page string="Reservas Presentes">
								<field name="presentreserve">
